<!DOCTYPE html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>PixelWAR</title>
        <script src="assets/vendor/jquery-3.6.0.js"></script>
        <script src="assets/vendor/jquery-ui.js"></script>
        <link rel="stylesheet" href="assets/css/styles.css">
        <link rel="stylesheet" href="assets/css/loader.css">
        <script type="text/javascript" src="assets/js/vue.js"></script>
    </head>
    <body>
        <div class="body-container" id="app">
            <form action="/canvas/generate" onsubmit="return generate()" method="post" role="form" class="flex-1">
                <div class="column-section center top gap-20 scrollable">
                    <div class="flex-3">
                        <div class="bg-color h-95 border-rad-20">
                            <h1 class="titre-form" style="margin-bottom: 30px;">CREATION D'UN CANVA</h1>
                            <div class="column-section bg-main" style="max-height:80%; overflow: auto;">
                                    <div class="row-section">
                                        <h1 class="soustitre-form flex-1">NOM DU CANVA</h1>
                                        <input name="name" type="text" id="name" class="input-text flex-2" placeholder="Krusty Krab's Palace">
                                    </div>
                                    <div class="row-section">
                                        <h1 class="soustitre-form flex-1">LARGEUR</h1>
                                        <input name="height" type="number" id="height" min="10" max="5000" class="input-text flex-2" placeholder="2000">
                                    </div>
                                    <div class="row-section">
                                        <h1 class="soustitre-form flex-1">LONGUEUR</h1>
                                        <input name="length" type="number" id="length" min="10" max="5000" class="input-text flex-2" placeholder="2000">
                                    </div>
                                    <label class="flex-1" id="generate-answer"></label>   
                            </div>
                        </div>
                    </div>
                    <div class="flex-2" >
                        <div class="bg-color h-95 border-rad-20">
                            <h1 class="titre-form" style="margin-bottom: 30px;">MEMBRES</h1>
                            <div class="column-section bg-main" style="margin:10px; max-height:80%; overflow: auto;">
                                    <div class="row-section">
                                        <h1 class="soustitre-form flex-1">PSEUDO</h1>
                                        <input name="name" type="text" id="name" class="input-text flex-3" placeholder="Krusty Krab's Palace">
                                    </div>
                                    <label class="flex-1" id="generate-answer"></label>   
                                    
                                    
                                    <div class="w-100 mg-10" style="overflow:hidden; max-height:80%; border-radius:10px"  >
                                        <div class="top-rounded-box color-sc bottom-border">
                                            <div class="title-form text-white">Pseudo</div>
                                        </div>
                                        <div class="scrollable list-games border-bottom" style="max-height: 200px; overflow: auto";>
                                            <div class="mid-box">
                                                <div class="canva-row">Sneawy</div>
                                                <div class="canva-row">Sneawy </div>
                                                <div class="canva-row">Sneawy</div>
                                                <div class="canva-row">Sneawy</div>
                                                <div class="canva-row">Sneawy</div>
                                                <div class="canva-row">Sneawy</div>
                                                <div class="canva-row">Sneawy</div>
                                            </div>
                                        </div>
                                    </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="login-menu">
                    <% if (!logged) { %>
                        <a href="/users/login">Connexion</a>
                        <a href="/users/signup">Inscription</a>
                    <% } else { %>
                        <a href="/perfil">Profil</a>
                        <a href="/canvas">Canvas</a>
                        <a href="/logout">Se d√©connecter</a>
                    <% } %>
                </div>
                <div class="footer bg-main">
                    <button type="submit" class="btn valid">CREER<div class="icon unlocked"></div></button>
                    <button type="button" v-on:click="retour()" class="btn error">RETOUR<div class="icon join"></div></button>
                </div>
            </form>
        </div>
        <script>
            function generate() {
                let dataToPost = {
                    name: $('#name').val(),
                    height: $('#height').val(),
                    length: $('#length').val()
                };            
                console.log(dataToPost);
                if ( dataToPost.name==""|| dataToPost.height=="" || dataToPost.length == "" || (dataToPost.height > 5000 || dataToPost.height < 10 || dataToPost.length > 5000 || dataToPost.length < 10))
                {
                    $('#generate-answer').html("Le formulaire n'est pas valide.");
                    return false
                }
                else 
